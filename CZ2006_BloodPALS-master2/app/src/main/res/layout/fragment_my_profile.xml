<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.myprofile.MyProfileFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/list_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/list_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/list_margin"
                    android:orientation="vertical">

                    <!-- Name -->

                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_name" />

                    <TextView
                        android:id="@+id/display_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:text="@string/loading_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <!-- Email -->

                    <TextView
                        android:id="@+id/label_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_email" />

                    <TextView
                        android:id="@+id/display_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:text="@string/loading_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <!-- Date of Birth -->

                    <TextView
                        android:id="@+id/label_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_dob" />

                    <TextView
                        android:id="@+id/display_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:text="@string/loading_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <!-- Blood Type -->

                    <TextView
                        android:id="@+id/label_blood_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_blood_type" />

                    <TextView
                        android:id="@+id/display_blood_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:text="@string/loading_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                    <!-- Points -->

                    <TextView
                        android:id="@+id/label_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_points" />

                    <TextView
                        android:id="@+id/display_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:text="@string/loading_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <!-- View My QR Code Button -->

            <Button
                android:id="@+id/button_view_my_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/list_margin"
                android:text="@string/button_view_my_qr_code" />

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>